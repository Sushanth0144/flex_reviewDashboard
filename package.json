{
  "name": "flexliving-reviews-dashboard-express-next",
  "version": "1.1.1",
  "private": true,
  "type": "module",
  "scripts": {
    "//": "=== Local development ===",
    "dev": "concurrently -k -n API,WEB -c blue,green \"node server.js\" \"next dev -p 3000\"",
    "dev:api": "node server.js",
    "dev:web": "next dev -p 3000",
    "//:2": "=== Production starts ===",
    "//:3": "Render uses `npm start` -> API only",
    "start": "node server.js",
    "start:web": "next start -p 3000",
    "//:4": "Vercel ignores start; it uses `build` for the Next.js app",
    "build": "next build"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "next": "14.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
